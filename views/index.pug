extends mainLayout

block stylesheets
  link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
  link(rel="stylesheet" href="/css/index.css")

block scripts
  script(src="/js/chatHandler.js")
  script(src="/js/utils.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js")
  script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous")

block content
  div(class="container mt-4")
    div(class="row overflow-auto" style="max-height:75vh; height:75vh; overflow-y: scroll;")
      div(class="w-100" id="messagesList")
    div(class="row")
      hr()
    div(class="form-row border-dark")
      div(class="col-11 d-flex")
        input(type="text" class="form-control col" id="messageInput" placeholder="" onkeyup="trySubmitUserText(event)" autofocus)
        input(type="button" class="btn btn-primary ml-2" id="sendButton" value="Send" onclick="submitUserText()")
